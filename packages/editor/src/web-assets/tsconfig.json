{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "declarationMap": true,
    "declaration": true,
    "target": "esnext",
    "lib": ["es2017", "dom"],
    "typeRoots": [
      "./node_modules/@types",
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
  },
  "files": [
    "src/constants.ts",
    "src/index.ts",
    "src/types.ts",
    "src/html-asset-getters.ts",
  ],
  "references": [{"path": "../../../common"}]
}