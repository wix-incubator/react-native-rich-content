{
    "display": "editor",
    "compilerOptions": {
      "composite": false,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSources": false,
      "isolatedModules": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "preserveWatchOutput": true,
      "strict": true,
      "incremental": false,
      "target": "esnext",
      "module": "ES2015",
      "lib": ["es2017"],
      "allowJs": true,
      "jsx": "react-native",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "references": [
      {"path": "src/web-assets"}
    ],
    "include": ["src"],
    "exclude": ["node_modules", "src/__test__/**/*", "src/web-assets", "**/*.test.ts"],
  }
